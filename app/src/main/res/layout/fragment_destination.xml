<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DestinationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/placeImageView"
            android:layout_width="match_parent"
            android:layout_height="224dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:adjustViewBounds="false"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="348dp"
            android:layout_height="58dp"
            android:layout_margin="20dp"
            android:text="Opera House"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textTextView"
            android:layout_width="wrap_content"
            android:layout_height="328dp"
            android:layout_margin="20dp"
            android:lineSpacingExtra="5dp"
            android:text="Sydney Opera House sits on Bennelong Point. Bennelong Point was named after Woollarawarre Bennelong, a senior Eora man at the time of the arrival of British colonisers in Australia in 1788."
            android:textAlignment="center"
            android:textSize="18dp" />


    </LinearLayout>
</FrameLayout>